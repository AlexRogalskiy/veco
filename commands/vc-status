
usage() {
    echo "usage: vc status"
}


cmd_default() {
    # from vc_common
    vc_exec=$(get_vc_type)
    vc_args=""
    case $vc_exec in
        "git")
            vc_args="status --short"
            ;;
        *)
            vc_args="status"
            ;;
    esac
    $vc_exec $vc_args "$@"
}


cmd_help() {
    usage
    exit 0
}

# /* vim: set filetype=sh : */
