
usage() {
    echo "usage: vc revert [ other options ]"
}


cmd_default() {
    vc_exec=$(get_vc_type)
    vc_args=""
    case $vc_exec in
        "git" )     vc_args="checkout --";;
        * )         vc_args="revert";;
    esac
    $vc_exec $vc_args "$@"
}


cmd_help() {
    usage
    exit 0
}

